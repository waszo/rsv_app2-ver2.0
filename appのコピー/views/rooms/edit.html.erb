<h2>施設情報編集</h2>

 
  <%=form_with model:@room do |f| %> 

  <table>
    <tr>
      <th><%=f.label :name,"施設名"%></th>
      <td><%=f.text_field :name%></td>
    </tr>

    <tr>
    <th><%=f.label :description,"施設詳細"%></th>
    <td><%=f.text_area :description%></td>
    </tr>

    <tr>
    <th><%=f.label :price,"料金"%></th>
    <td><%=f.text_field :price, value: @room.price.to_i%></td>
    </tr>

    <tr>
    <th><%=f.label :adress,"住所"%></th>
    <td><%=f.text_field :adress%></td>
    </tr>
    
    <tr>
    <th><%= f.label :image_room,"画像" %></th>
    <th><%= f.file_field :image_room %></th>
    </tr>


  </table>
  <%= f.hidden_field :room_id, value: @room.id %>
    <div>
  <ul>
    <li><%= f.submit "保存"%></li>
    <li><%= link_to "キャンセル", :back %></li>
  </ul>
</div>
<% end %>